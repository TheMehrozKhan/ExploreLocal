﻿@model ExploreLocal.Models.Tbl_Destination
@{
    ViewBag.Title = "Create_Ad";
}
<head>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">
    <title>Create Your Ad - Shopio The Best Ecommerce Store in The Town</title>
    <style>

        body {
            font-family: 'Poppins', sans-serif;
        }

        form {
            padding-top: 40px;
            padding-bottom: 30px;
            padding-left: 100px;
            padding-right: 100px;
            margin-top: 50px;
            border-radius: 25px;
            margin-top: 50px;
            margin-bottom: 50px;
            box-shadow: rgba(17, 12, 46, 0.08) 0px 48px 100px 0px;
        }

        #thebutton {
            border: none;
            cursor: pointer;
            width: 100%;
            font-size: 23px;
            height: 55px;
        }

            #thebutton:hover {
                box-shadow: rgba(149, 157, 165, 0.1) 0px 8px 24px;
            }

        input {
            border-radius: 4.5px;
            padding: 10px;
            width: 100%;
            box-shadow: rgba(149, 157, 165, 0.1) 0px 8px 24px;
        }

        select.form-control {
            margin-bottom: 30px;
        }

        .theform input:focus,
        .theform textarea:focus,
        .theform select:focus {
            outline: none;
            box-shadow: rgba(149, 157, 165, 0.07) 0px 8px 24px;
            border-color: #3554D1;
        }

        .theform .form-group {
            margin-bottom: 25px;
        }

        textarea {
            box-shadow: rgba(149, 157, 165, 0.1) 0px 8px 24px;
        }
    </style>
</head>
<div class="d-flex justify-content-center align-items-center" style="margin-top:50px;">
    @using (Html.BeginForm("Create_Destination", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @class = "theform" }))
    {
        <h3 class="text-center mb-4">Create Your Ad Now! 😃</h3>

        <div class="form-group" style="margin-top: 30px; position: relative; top: 23px; box-shadow: rgba(149, 157, 165, 0.07) 0px 8px 24px; ">
            @Html.LabelFor(x => x.FK_Venue_Id, "Select Venue Category:")
            @Html.DropDownListFor(x => x.FK_Venue_Id, ViewBag.categorylist as SelectList, new { @class = "form-control"})
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.DestinationName, "Destination Name:")
            @Html.TextBoxFor(x => x.DestinationName, new { @class = "form-control", @placeholder = "Enter Destination Name" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Price, "Destination Price:")
            @Html.TextBoxFor(x => x.Price, new { @class = "form-control", @type = "number", @placeholder = "Enter Destination Price" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Country, "Destination Country:")
            @Html.TextAreaFor(x => x.Country, new { @class = "form-control", @placeholder = "Enter Destination Country" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.City, "Destination City:")
            @Html.TextBoxFor(x => x.City, new { @class = "form-control", @type = "text", @placeholder = "Enter Destination City" })
        </div>

        <div class="form-group">
            @Html.Label("Destination Images:")
            <input type="file" name="imgfiles" id="imgfiles" class="form-control-file" required multiple />
        </div>

        <button type="submit" class="btn btn-primary" id="thebutton" style="background-color: #3554D1; outline: none; border: none; margin-top: 10px;color:white;">
            Create Ad
        </button>
    }
</div>