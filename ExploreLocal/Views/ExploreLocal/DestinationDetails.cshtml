                    </div>

                    <h3 class="text-22 fw-500 mt-30">
                        Tour snapshot
                    </h3>
                    <div class="row y-gap-30 justify-between pt-20">
                        <div class="col-12">
                            <div class="d-flex align-items-center">
                                @{
                                    if (Model.ExpertProfileImage != null)
                                    {
                                        <img src="@Url.Content(Model.ExpertProfileImage)" height="50" width="50" alt="Expert Profile Image" style="border-radius:50%;" />
                                    }
                                    else
                                    {
                                        <img src="~/Content/img/Default.png" height="50" width="50" alt="Expert Profile Image" style="border-radius:50%;" />
                                    }
                                }
                                <a href="@Url.Action("ExpertDashboard","ExploreLocal", new { id = Model.ExpertId } )">
                                    <h8 class="ml-10" style="font-weight:500">Uploaded By @Model.ExpertName</h8>
                                </a>
                            </div>
                        </div>
                    </div>


                    <div class="border-top-light mt-40 mb-40"></div>


                    <div class="row y-gap-30 justify-between pt-20">
                        <div class="col-12">
                            <h3 class="text-22 fw-500 mt-30 mb-20">Street View</h3>
                            @if (!string.IsNullOrEmpty(Model.GoogleStreetViewURL))
                            {
                                <div class="video-container" style="width:100%;">
                                    @Html.Raw(Model.GoogleStreetViewURL)
                                </div>
                            }
                            else
                            {
                                <p>No street view for this tour!</p>
                            }
                        </div>
                    </div>

                    <div class="border-top-light mt-40 mb-40"></div>

                    <div class="row x-gap-40 y-gap-40">
                        <div class="col-12">
                            <h3 class="text-22 fw-500">Overview</h3>
                            <p class="text-dark-1 text-15 mt-20">@Html.Raw(Model.Description)</p>
                        </div>

                        <div class="col-md-6">
                            <h5 class="text-16 fw-500">Available languages</h5>
                            <div class="text-15 mt-10">@Model.Language</div>
                        </div>

                        <div class="col-md-6">
                            <h5 class="text-16 fw-500">Cancellation policy</h5>
                            <div class="text-15 mt-10">For a full refund, cancel at least 24 hours in advance of the start date of the experience.</div>
                        </div>

                        <div class="col-md-6">
                            <h5 class="text-16 fw-500">Highlights</h5>
                            <ul class="list-disc text-15 mt-10">
                                @Html.Raw(@Model.Destination_Highlights)
                            </ul>
                        </div>

                        <div class="col-md-6">
                            <h5 class="text-16 fw-500">Meeting Point</h5>
                            <div class="text-15 mt-10">@Model.MeetingPoint</div>
                        </div>

                    </div>

                    <div class="mt-40 border-top-light">
                        <div class="row x-gap-40 y-gap-40 pt-40">
                            <div class="col-12">
                                <h3 class="text-22 fw-500">Tour's Schedule</h3>
                                <div class="row x-gap-40 y-gap-40 pt-20">
                                    <div class="col-md-6">
                                        <div class="text-dark-1 text-15">
                                            <h6 style="font-weight:500;"><i class="fa-sharp fa-solid fa-play" style="color: #0f67ff; margin-right: 10px; text-shadow: rgba(100, 100, 111, 10) 0px 7px 29px 0px;"></i> Tour Start Date: @Model.StartDate </h6>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="text-dark-1 text-15">
                                            <h6 style="font-weight:500;"><i class="fa-solid fa-check" style="color: #0f67ff; margin-right: 10px; "></i> Tour End Date: @Model.EndDate </h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <h3 class="text-22 fw-500">Tour's Duration</h3>
                                <div class="row x-gap-40 y-gap-40 pt-20">
                                    <div class="col-md-6">
                                        <div class="text-dark-1 text-15">
                                            <h6 style="font-weight:500;">Tour Duration is: @Model.Destination_Duration </h6>
