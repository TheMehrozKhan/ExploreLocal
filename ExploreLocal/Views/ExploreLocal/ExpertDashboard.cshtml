    <div class="col-xl-4 col-lg-6" style="margin-top: 80px;">
        <div class="thecard2">
            <div class="card-statistic-3 p-4">
                <div class="card-icon card-icon-large">
                    <i class="ri-flight-takeoff-line" style="font-size: 120px; text-align: center; margin-right: 3px; color: white; position: absolute; top: 5px; right: -4px; opacity: 0.2; "></i>
                </div>
                <div class="mb-4" style="margin-top: 30px;">
                    <h6 class="card-title mb-0 text-white" style="font-weight:500;">@Session["expert_name"] Total Uploaded Tours</h6>
                </div>
                <div class="row align-items-center mb-2 d-flex">
                    <div class="col-8">
                        <h2 class="d-flex align-items-center mb-0 text-white">
                            @ViewBag.TotalUploadedTours Tour's
                        </h2>
                    </div>
                </div>
                <div class="progress mt-1 " data-height="8" style="height: 8px;">
                    <div class="progress-bar" role="progressbar" data-width="25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 25%; background-color: greenyellow;"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container" style="background-color: white; box-shadow: rgba(17, 12, 46, 0.05) 0px 48px 100px 0px;border-radius:15px;margin-top:50px;margin-bottom:50px;">
    <div class="profile-card">
        <div class="left-section">
            <div class="profile-info">
                @if (!string.IsNullOrEmpty(Model.ExpertProfileImage))
                {
                    <img class="profile-picture" src="@Url.Content(Model.ExpertProfileImage)" alt="Profile Picture" />
                }
                else
                {
                    <img class="profile-picture" src="~/Content/img/Default.png" alt="Default Profile Picture" />
                }
                <div class="profile-username">@Model.ExpertName</div>
            </div>
        </div>
        <div class="right-section">
            <div class="profile-details">
                <div class="profile-details-item">
                    @if (Convert.ToInt32(Session["expert_id"]) == Model.ExpertId)
                    {
                        <div class="profile-details-label">Password:</div>
                        <div class="profile-details-value">
                            <input type="password" class="profile-input" value="@Model.ExperPassword" readonly style="text-align:right;" />
                        </div>
                    }
                </div>
                <div class="profile-details-item">
                    <div class="profile-details-label">Email:</div>
                    <div class="profile-details-value">
                        <input type="email" class="profile-input" value="@Model.ExpertEmail" readonly style="text-align:right;" />
                    </div>
                </div>
                <div class="profile-details-item">
                    <div class="profile-details-label">Brief Description:</div>
                    <div class="profile-details-value">
                        <input type="email" class="profile-input" value="@Model.ExpertBio" readonly style="text-align:right;" />
                    </div>
                </div>
                <div class="profile-details-item">
                    <div class="profile-details-label">Location:</div>
                    <div class="profile-details-value">
                        <input type="email" class="profile-input" value="@Model.ExpertLocation" readonly style="text-align:right;" />
                    </div>
                </div>
            </div>
            <div class="profile-actions">
                @if (Convert.ToInt32(Session["expert_id"]) == Model.ExpertId)
                {
                    <div style="margin-top:20px;">
                        <a href="@Url.Action("Edit_Expert", "ExploreLocal", new { id = Model.ExpertId })" class="button-5">Edit</a>
                        <a href="@Url.Action("Logout", "ExploreLocal", new { id = Model.ExpertId })" class="button-5" style="background-color: darkorange;">Logout</a>
                        <div class="centered-button" style="display: flex; justify-content: center; align-items: center;">
                            <button class="button-34" role="button"><i class="fa-solid fa-upload"></i><a href="@Url.Action("Create_Tour","ExploreLocal")" class="thelink"> Upload Your Tours </a></button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
