<div class="container" style="background-color: white; box-shadow: rgba(17, 12, 46, 0.05) 0px 48px 100px 0px; border-radius: 15px; margin-top: 100px; margin-bottom: 50px;">
    <div class="user-bookings" style="padding: 20px;">
        <h2 style="text-align: center; margin-bottom: 30px;">Your Bookings</h2>
        @if (ViewBag.ExpertBookings != null && ViewBag.ExpertBookings.Count > 0)
        {
            <div class="table-responsive">
                <!-- Add table-responsive class for responsive table -->
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Booking ID</th>
                            <th>Tour Name</th>
                            <th>Booking Date</th>
                            <th>Booked By</th>
                            <th>Contact Number</th>
                            <th>Email</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Duration</th>
                            <th>Tour Price</th>
                            <th>Tour Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in ViewBag.ExpertBookings)
                        {
                        <tr>
                            <td>@booking.BookingId</td>
                            <td>@(booking.Tbl_Destination != null ? booking.Tbl_Destination.DestinationName : "N/A")</td>
                            <td>@booking.BookingDate.ToString("yyyy-MM-dd")</td>
                            <td>@(booking.Tbl_Expert != null ? booking.Tbl_User.FirstName + booking.Tbl_User.LastName : "N/A")</td>
                            <td>@(booking.Tbl_Expert != null ? booking.ContactNumber : "N/A")</td>
                            <td>@(booking.Tbl_Expert != null ? booking.Tbl_User.Email : "N/A")</td>
                            <td>@(booking.Tbl_Expert != null ? booking.Tbl_Destination.StartDate : "N/A")</td>
                            <td>@(booking.Tbl_Expert != null ? booking.Tbl_Destination.EndDate : "N/A")</td>
                            <td>@(booking.Tbl_Destination != null ? booking.Tbl_Destination.Destination_Duration : "N/A")</td>
                            <td>@(booking.Tbl_Destination != null ? booking.Tbl_Destination.Price : "N/A")</td>
                            <td>
                                <p style="background-color: @GetTourStateColor(booking.TourState);color:white;border-radius:12px;height:35px;width:120px;display:flex;justify-content:center;align-items:center;box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;">
                                    @booking.TourState
                                </p>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div style="display:flex;justify-content:center;align-items:center;">
                <div class="p-container" style="box-shadow: rgba(17, 12, 46, 0.1) 0px 48px 100px 0px; background: #3554D1; border-radius: 12px; padding: 21px; ">
                    <p style="font-size:26px;font-weight:600;line-height:30px;color:white;">Sorry @Session["u_name"] You Didn't Have <br /> Any Bookings Yet!</p>
                </div>
                <img src="~/Content/img/Couldn'tFind.png" style="position:relative;top:20px;" />
            </div>
        }

        @functions {
            // Helper function to get background color based on tour state
            private string GetTourStateColor(string tourState)
            {
                if (tourState == "Upcoming")
                {
                    return "darkorange"; // Yellow background for "Upcoming"
                }
                else if (tourState == "Ongoing")
                {
                    return "#a402f5"; // Deep sky blue background for "Ongoing"
                }
                else if (tourState == "Completed")
                {
                    return "#0298f5"; // Light green background for "Completed"
                }
                else
                {
                    return "white"; // Default background color (white) for unknown states
                }
            }
        }

    </div>
</div>

<div class="container" style="background-color: white; box-shadow: rgba(17, 12, 46, 0.05) 0px 48px 100px 0px; border-radius: 15px; margin-top: 100px; margin-bottom: 50px;">
    <div class="user-bookings" style="padding: 20px;">
        <h2 style="text-align: center; margin-bottom: 30px; margin-top: 20px;">Your Uploaded Tours</h2>
        @if (ViewBag.ExpertUploadedTours != null && ViewBag.ExpertUploadedTours.Count > 0)
        {
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Tour Name</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Duration</th>
                            <th>Price</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tour in ViewBag.ExpertUploadedTours)
                        {
                        <tr>
                            <td>@tour.DestinationName</td>
                            <td>@tour.StartDate.ToShortDateString()</td>
                            <td>@tour.EndDate.ToShortDateString()</td>
                            <td>@tour.Destination_Duration</td>
                            <td>@tour.Price</td>
                            <td>
                                <a href="@Url.Action("DeleteTour", "ExploreLocal", new { id = tour.DestinationID })"><i class="fa-solid fa-trash-can" style="color: #db0016; font-size: 18px; display:flex;justify-content:center;align-items:center;margin-right:50px;"></i></a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p style="text-align:center;display:flex;justify-content:center;align-items:center;">No tours uploaded yet.</p>
        }
    </div>
</div>