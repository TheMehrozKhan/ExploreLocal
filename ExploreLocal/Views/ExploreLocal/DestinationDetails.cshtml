                        </div>
                    </div>
                </div>
                <div class="w-360 lg:w-full d-flex flex-column items-center">
                    <div class="px-30 py-30 rounded-4 border-light bg-white shadow-4">
                        <div class="text-14 text-light-1">
                            From <span class="text-20 fw-500 text-dark-1 ml-5">PKR @string.Format("{0:N0}", Model.Price) PKR</span>
                        </div>
                        <div class="col-12">
                            <div class="col-12">
                                <div class="col-12">
                                    <div class="col-12">
                                        @{
                                            int expertId = Model.ExpertId;
                                            int destinationId = Model.DestinationID;
                                            int userId = Convert.ToInt32(Session["u_id"]);
                                        }
                                        @using (Html.BeginForm("BookingForm", "ExploreLocal", FormMethod.Get))
                                        {
                                            @Html.Hidden("expertId", expertId)
                                            @Html.Hidden("destinationId", destinationId)
                                            @Html.Hidden("userId", userId)
