@model ExploreLocal.Models.Tbl_Expert
<head>
    <script src="https://kit.fontawesome.com/90a0d7efa7.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
    <title>@Session["expert_name"] Your Dashboard - ExploreLocal</title>
    <style>
        .circle-img {
            width: 70px;
            height: 60px;
            border-radius: 50%;
            object-fit: cover;
        }

        .center-card {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        h1 {
            text-align: center;
            margin-top: 40px;
        }

        .profile-card {
            border-radius: 8px;
            padding: 20px;
            margin-top: 40px;
            display: flex;
            flex-direction: row;
            align-items: center;
        }

        .left-section {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-right: 20px;
        }

        .right-section {
            flex-grow: 1;
        }

        .profile-info {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            margin-left: 30px;
            padding-right: 20px;
            border-right: 1px solid #ddd;
        }

        .profile-picture {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 10px;
        }

        .profile-username {
            font-size: 20px;
            font-weight: bold;
        }

        .profile-details {
            display: flex;
            flex-direction: column;
            margin-top: 20px;
        }

        .profile-details-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 0;
            border-bottom: 1px solid #ddd;
        }

        .profile-details-label {
            font-size: 14px;
        }

        .profile-details-value {
            font-size: 16px;
            font-weight: bold;
        }

        .profile-input {
            width: 100%;
            padding: 5px;
            border: none;
            background-color: transparent;
        }

        .profile-actions {
            margin-top: 20px;
            text-align: right;
        }

        #thecontainer {
            border-radius: 8px;
            background-color: white;
            box-shadow: rgba(17, 12, 46, 0.15) 0px 48px 100px 0px;
            padding: 25px;
        }

        #thefirsta {
            color: black;
        }

            #thefirsta:hover {
                color: #F76B6A;
            }


        .button-5 {
            align-items: center;
            background-clip: padding-box;
            background-color: darkblue;
            border: 1px solid transparent;
            border-radius: .25rem;
            box-shadow: rgba(0, 0, 0, 0.02) 0 1px 3px 0;
            box-sizing: border-box;
            color: #fff;
            cursor: pointer;
            display: inline-flex;
            font-size: 16px;
            font-weight: 500;
            justify-content: center;
            line-height: 1.25;
            margin: 0;
            min-height: 3rem;
            padding: calc(.875rem - 1px) calc(1.5rem - 1px);
            position: relative;
            text-decoration: none;
            transition: all 250ms;
            user-select: none;
            -webkit-user-select: none;
            touch-action: manipulation;
            vertical-align: baseline;
            width: auto;
        }

            .button-5:hover,
            .button-5:focus {
                color: white;
                background-color: darkblue;
                box-shadow: rgba(0, 0, 0, 0.1) 0 4px 12px;
            }

            .button-5:hover {
                color: white;
                transform: translateY(-1px);
            }

            .button-5:active {
                color: white;
                background-color: darkblue;
                box-shadow: rgba(0, 0, 0, .06) 0 2px 4px;
                transform: translateY(0);
            }


        .button-34 {
            background: #5E5DF0;
            border-radius: 6px;
            box-sizing: border-box;
            color: #FFFFFF;
            cursor: pointer;
            font-size: 16px;
            font-weight: 500;
            line-height: 24px;
            opacity: 1;
            outline: 0 solid transparent;
            padding: 15px;
            user-select: none;
            -webkit-user-select: none;
            touch-action: manipulation;
            width: fit-content;
            word-break: break-word;
            border: 0;
            transition: 0.2s;
        }

            .button-34:hover {
                border: 0.5px solid #5E5DF0;
                color: #5E5DF0;
                background-color: white;
                box-shadow: rgba(17, 12, 46, 0.15) 0px 48px 100px 0px;
            }

        .thelink:hover {
            color: #5E5DF0;
        }

        .table-responsive {
            overflow-y: hidden; /* Hide the vertical scrollbar */
            overflow-x: auto; /* Enable horizontal scrollbar */
        }

            .table-responsive table {
                width: 100%;
                white-space: nowrap;
            }

            .table-responsive td,
            .table-responsive th {
                overflow: hidden;
                text-overflow: ellipsis;
            }

            .table-responsive::-webkit-scrollbar {
                overflow-y: hidden;
                overflow-x: auto;
                height: 5px; /* Adjust the width of the scrollbar as needed */
            }

            .table-responsive::-webkit-scrollbar-thumb {
                background-color: deepskyblue; /* Scrollbar thumb color */
                border-radius: 8px; /* Adjust the radius to make the thumb rounded */
            }

                .table-responsive::-webkit-scrollbar-thumb:hover {
                    background-color: #888; /* Scrollbar thumb color on hover */
                }

            .table-responsive::-webkit-scrollbar-track {
                background-color: white; /* Background color of the scrollbar track */
            }

        /* Styling for the card */
        .thecard1 {
            margin-left: 30px;
            height: 190px;
            width: 85%;
            border-radius: 13px;
            border: none;
            position: relative;
            background-color: #436EEE;
            transition: 0.3s;
        }

            .thecard1:hover {
                margin-left: 15px;
                padding: 5px;
            }

        .thecard2 {
            margin-left: 30px;
            height: 190px;
            width: 85%;
            border-radius: 13px;
            border: none;
            position: relative;
            background-color: #436EEE;
            transition: 0.3s;
        }

            .thecard2:hover {
                margin-left: 15px;
                padding: 5px;
            }
    </style>
</head>
<div class="row" style="margin-top: 80px;display:flex;justify-content:center;align-items:center;">
