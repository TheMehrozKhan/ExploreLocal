﻿﻿@model ExploreLocal.Models.Tbl_Venue
@{
    ViewBag.Title = "Add_Category";
    Layout = null;

}
<head>
    <title>Our Admin Panel Home - FlavourFusion</title>
    <link rel="stylesheet" href="~/Content/css/AdminPanel.css?v=@DateTime.Now.Ticks" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.js" integrity="sha512-8Z5++K1rB3U+USaLKG6oO8uWWBhdYsM3hmdirnOEWp8h2B1aOikj5zBzlXs8QOrvY9OxEnD2QDkbSKKpfqcIWw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">
    <link href="~/Content/bootstrap-select-country.min.css" rel="stylesheet">
    <script src="~/Scripts/bootstrap-select-country.min.js"></script>
    <style>
        * {
            font-family: 'Poppins', sans-serif;
        }

        .form-group {
            margin-bottom: 40px;
        }

        #custom-input {
            border-color: #3385ff;
            height: 50px;
            padding: 20px;
            box-shadow: rgba(17, 12, 46, 0.02) 0px 48px 100px 0px;
            transition: 0.2s;
        }

            #custom-input:focus {
                padding: 15px;
                border-color: cornflowerblue;
            }
    </style>
</head>
<body>
    <div class="container" style="margin-top: 20px;">
        <ul class="nav" style="box-shadow: rgba(17, 12, 46, 0.08) 0px 48px 100px 0px; height: 55px;">
            <li class="nav-item"><a class="nav-link" href="@Url.Action("Admin_Panel")">Home</a></li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle thenav-link" href="#" role="button" aria-haspopup="true" aria-expanded="false">Venues</a>
                <ul class="dropdown-menu" style="background: white; border: none; padding: 13px; box-shadow: rgba(17, 12, 46, 0.2) 0px 48px 100px 0px; border-radius: 8px; height: 120px;">
                    <li><a class="dropdown-item" href="@Url.Action("Add_Venue")">Add Venues</a></li>
                    <li><a class="dropdown-item" href="@Url.Action("View_Venue")">View Venues</a></li>
                </ul>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle thenav-link" href="#" role="button" aria-haspopup="true" aria-expanded="false">Experts</a>
                <ul class="dropdown-menu" style="background: white; border: none; padding: 13px; box-shadow: rgba(17, 12, 46, 0.2) 0px 48px 100px 0px; border-radius: 8px;">
                    <li><a class="dropdown-item" href="@Url.Action("AllExperts")">All Experts</a></li>
                    <li><a class="dropdown-item" href="@Url.Action("ExpertRequests")">Expert Requests</a></li>
                    <li><a class="dropdown-item" href="@Url.Action("ExpertBookings")">Expert Bookings</a></li>
                </ul>
            </li>
            <li class="nav-item"><a class="nav-link" href="@Url.Action("RegisteredUser","Admin")">Registered Users</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Comments & Reviews</a></li>
            <li class="nav-item"><a class="nav-link" href="@Url.Action("Logout","Admin")">Logout</a></li>
        </ul>
    </div>
    <script>
        $(document).ready(function () {
            $('.dropdown').hover(
                function () {
                    $(this).find('.dropdown-menu').stop(true, true).delay(100).fadeIn(10);
                },
                function () {
                    $(this).find('.dropdown-menu').stop(true, true).delay(100).fadeOut(10);
                }
            );
        });
    </script>
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="thecontainer" style="box-shadow: rgba(17, 12, 46, 0.1) 0px 48px 100px 0px;padding:60px;border-radius:20px;">
            @using (Html.BeginForm("Add_Venue", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", id = "signupform" }))
            {
            <form method="post">
                <div class="form-group">
                    <label for="venue_name">Venue Name:</label>
                    @Html.TextBoxFor(x => x.Venue_name, new { @class = "form-control", @id = "custom-input", @placeholder = "Enter Venue Name" })
                    <span style="color: red">@Html.ValidationMessageFor(x => x.Venue_name)</span>
                </div>
                <div class="form-group">
                    <label for="venueCountry">Venue Country:</label>
                    @Html.TextBoxFor(x => x.Venue_Country, new { @class = "form-control", @id = "custom-input", @placeholder = "Enter Venue Country" })
                    <span style="color: red">@Html.ValidationMessageFor(x => x.Venue_Country)</span>
                </div>
                <div class="form-group">
                    <label for="venueCountry">Venue Description:</label>
                    @Html.TextAreaFor(x => x.Venue_Description, new { @class = "form-control", @id = "custom-input", @placeholder = "Enter Venue Description", @style = "padding:15px;" })
                    <span style="color: red">@Html.ValidationMessageFor(x => x.Venue_Description)</span>
                </div>
                <div class="form-group">
                    <label for="venue_img">Venue Image:</label>
                    <input type="file" name="imgfile" id="imgfile" class="input" required />
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary w-100" id="thebutton" style="font-size:22px;margin-top:10px;height:50px;">Add</button>
                </div>
            </form>
            }
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
    document.getElementById('signupform').addEventListener('submit', function (event) {
        event.preventDefault();
        Swal.fire({
            icon: 'success',
            title: 'Congrats!',
            text: 'Your Recipe Category Are Uploaded!'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '@Url.Action("View_Venue", "ExploreLocal")';
                this.submit();
            }
        });
    });
    </script>
</body>