<head>
    <title>Our Admin Panel Home - FlavourFusion</title>
    <style>
        h4 {
            font-size: 30px;
            text-align: center;
            margin-top: 40px;
            margin-bottom: 50px;
        }

        ul.nav {
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            margin: 0;
            padding: 0;
            list-style: none;
            height: 45px;
            line-height: 45px;
            background: white;
            font-size: 13px;
            box-shadow: rgba(17, 12, 46, 0.15) 0px 48px 100px 0px;
            color: black;
            border-radius: 12px;
        }

            ul.nav li {
                float: left;
            }

            ul.nav a {
                display: block;
                padding: 0 28px;
                color: black;
                text-decoration: none;
            }

                ul.nav a:hover,
                ul.nav li.current a {
                    color: white;
                    background: darkblue;
                }

        .toast {
            position: fixed;
            right: 20px;
            z-index: 1;
            margin-bottom: 120px;
            box-shadow: rgba(17, 12, 46, 0.15) 0px 48px 100px 0px;
        }

        .toast-body {
            padding: 15px;
        }

        .toast-header {
            padding-top: 5px;
            padding-left: 5px;
        }

        .custom-close {
            position: absolute;
            top: 5px;
            right: 5px;
            padding: 0;
            background: none;
            border: none;
            font-size: 1.25rem;
            color: #000;
            opacity: 0.5;
            cursor: pointer;
        }

            .custom-close:hover {
                opacity: 1;
            }
    </style>
</head>
<body>
    <div class="container" style="margin-top:150px;">
        @if (TempData["ToastMessage"] != null)
        {
            <div role="alert" aria-live="assertive" aria-atomic="true" class="toast" data-bs-autohide="false">
                <div class="toast-header">
                    <img src="~/Content/img/greentick-icon.png" height="23" width="23" class="rounded mr-2" alt="...">
                    <small>@DateTime.Now</small>
                    <button type="button" class="btn-close" onclick="$('.toast').toast('hide')" aria-label="Close"></button>
                </div>
                <div class="toast-body">
                    <p class="card-text">@TempData["ToastMessage"]</p>
                </div>
            </div>
        }
        <h4> @Session["ad_name"], Welcome To Admin Panel</h4>
        <ul class="nav">
            <li><a href="#">Home</a></li>
            <li><a href="#">About Us</a></li>
            <li><a href="#">Services</a></li>
            <li><a href="#">Products</a></li>
            <li><a href="#">Contact</a></li>
        </ul>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-KyISe/Zrbo5qa2KA1WXYUV5s+yylDLApW2VgJ6ZLDsm7aUd3t8+Ew6Uj/UUasM4G" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-BhQs9FSzK0MQEqZm4Wvh9PeNXB4Nkv8UBpIOdp+AyF8yqkDrA8Q4vJr/dOxlz57Y" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            if (TempData["ToastMessage"] != null) {
                $('.toast').toast({ autohide: false });
                $('.custom-close').click(function () {
                    $(this).closest('.toast').toast('hide');
                });
                $('.toast').toast('show');
            }
        });
    </script>
</body>
