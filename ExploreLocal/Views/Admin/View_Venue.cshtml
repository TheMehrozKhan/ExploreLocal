@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/Content/css/AdminPanel.css?v=@DateTime.Now.Ticks" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
    <title>View All Categories - FlavourFusion</title>
    <style>

        a {
            text-decoration: none;
            color: black;
        }

            a:hover {
                text-decoration: none;
            }

        body {
            font-family: 'Poppins', sans-serif;
            overflow-x: hidden;
        }

        h4 {
            font-size: 30px;
            text-align: center;
            margin-top: 60px;
            margin-bottom: 40px;
        }

        .venue-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            margin-top: 20px;
        }

        .venue-card {
            height: 380px;
            width: 330px;
            margin: 20px;
            box-shadow: rgba(17, 12, 46, 0.05) 0px 48px 100px 0px;
            border-color: white;
            transition: 0.2s;
            border-radius: 12px;
            margin-bottom: 30px;
            position: relative;
        }

        .venue-img {
            width: 100%;
            object-fit: cover;
            border-radius: 8px;
        }

        .pagination-container {
            margin-top: 50px;
            margin-bottom: 30px;
            display: flex;
            justify-content: center;
        }

        .pagination {
            display: flex;
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .pagination li {
                box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
                margin-right: 5px;
            }

                .pagination li:last-child {
                    margin-right: 0;
                }

        .pagination-link {
            display: block;
            padding: 10px 15px;
            background-color: white;
            border: none;
            color: black;
            text-decoration: none;
            transition: background-color 0.2s;
        }

            .pagination-link:hover,
            .pagination-link:focus {
                background-color: #3554D1;
                color: white;
                border-color: #F76B6A;
            }

        .thedeletebtn:hover {
            color: orangered;
        }

        /* Popup Styles */
        .popup-container {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, 0.5);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            display: none;
        }

        .popup-content {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            text-align: center;
        }

        .popup-buttons {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

            .popup-buttons button {
                border-radius: 3px;
                width: 50px;
                height: 35px;
                border: none;
                margin: 0 10px;
                transition: 0.2s;
            }

                .popup-buttons button:hover {
                    width: 57px;
                    height: 37px;
                    font-size: 19px;
                    box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
                }
    </style>
</head>
<body>
    @Html.Partial("Layout")
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full" data-sidebar-position="fixed" data-header-position="fixed">
        <div class="body-wrapper">
            <div class="container-fluid">
                <div class="venue-container">
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <div class="venue-card" style="margin-bottom: 80px;">
                                <img src="@Url.Content(item.Venue_img)" class="venue-img" alt="Venue Image">
                                <div class="thevenueaction" style="background-color: white; width: 330px; box-shadow: rgba(17, 12, 46, 0.05) 0px 48px 100px 0px; padding: 5px; height: 60px; border-bottom-left-radius: 8px; border-bottom-right-radius: 8px; display: flex; justify-content: center; align-items: center; ">
                                    <a href="@Url.Action("Edit_Venue", "Admin", new { id = item.Venue_id })" style="font-size: 19px;color:black;font-weight:600;">Edit <img src="~/Content/img/edit.png" height="20" width="20" /> </a>
                                    <a href="#" class="thedeletebtn" onclick="showPopup('@Url.Action("DeleteConfirmed", "Admin", new { id = item.Venue_id })')" style="font-size: 19px; margin-left: 15px; color: black; font-weight: 600;">Delete <img src="~/Content/img/delete.png" height="20" width="20" /> </a>
                                </div>
                            </div>
                        }
                    }
                </div>
                <div class="pagination-container">
                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                                <a class="pagination-link" href="@Url.Action("View_Venue", new { page = Model.PageNumber - 1 })" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            @for (int i = 1; i <= Model.PageCount; i++)
                            {
                                <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                                    <a class="pagination-link" href="@Url.Action("View_Venue", new { page = i })">@i</a>
                                </li>
                            }
                            <li class="page-item @(Model.PageNumber == Model.PageCount ? "disabled" : "")">
                                <a class="pagination-link" href="@Url.Action("View_Venue", new { page = Model.PageNumber + 1 })" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>

                <div class="popup-container" id="popupContainer">
                    <div class="popup-content">
                        <p>Are you sure you want to delete this venue?</p>
                        <form id="deleteForm" method="post">
                            @Html.AntiForgeryToken()
                            <div class="popup-buttons">
                                <button class="btn-primary" onclick="cancelDelete()">No</button>
                                <button class="btn-danger" id="deleteBtn" onclick="confirmDelete()">Yes</button>
                            </div>
                        </form>
                    </div>
                </div>
                <script>
                    function showPopup(deleteUrl) {
                        var popupContainer = document.getElementById("popupContainer");
                        var deleteBtn = document.getElementById("deleteBtn");

                        deleteBtn.dataset.deleteUrl = deleteUrl;
                        popupContainer.style.display = "flex";
                    }

                    function confirmDelete() {
                        var deleteBtn = document.getElementById("deleteBtn");
                        var deleteUrl = deleteBtn.dataset.deleteUrl;

                        var data = {
                            "__RequestVerificationToken": $("input[name='__RequestVerificationToken']").val()
                        };

                        $.ajax({
                            url: deleteUrl,
                            type: "POST",
                            dataType: "json",
                            data: data,
                            success: function (data) {
                                if (data.success) {
                                    var venueCard = deleteBtn.closest(".venue-card");
                                    venueCard.remove();
                                } else {
                                    console.error("Delete request failed. Status: " + data.status);
                                }
                            },
                            error: function (xhr, status, error) {
                                console.error("Delete request failed. Status: " + xhr.status);
                            }
                        });

                        cancelDelete();
                    }

                    function cancelDelete() {
                        var popupContainer = document.getElementById("popupContainer");
                        popupContainer.style.display = "none";
                    }

                </script>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js"></script>
</body>
</html>
