﻿﻿@model IEnumerable<ExploreLocal.Models.Tbl_Bookings>
@{
    Layout = null;
}
<head>
    <link rel="stylesheet" href="~/Content/css/AdminPanel.css?v=@DateTime.Now.Ticks" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.js" integrity="sha512-8Z5++K1rB3U+USaLKG6oO8uWWBhdYsM3hmdirnOEWp8h2B1aOikj5zBzlXs8QOrvY9OxEnD2QDkbSKKpfqcIWw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css" integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk=" crossorigin="anonymous" />
    <style>

        body {
            font-family: 'Poppins', sans-serif;
        }

        .center-card {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin-bottom: 50px;
        }

        .circle-img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            object-fit: cover;
        }

        .center-heading {
            text-align: center;
            margin-top: 20px;
        }

        .table-responsive {
            overflow-y: hidden; /* Hide the vertical scrollbar */
            overflow-x: auto; /* Enable horizontal scrollbar */
        }

            .table-responsive table {
                width: 100%;
                white-space: nowrap;
            }

            .table-responsive td,
            .table-responsive th {
                overflow: hidden;
                text-overflow: ellipsis;
            }

            .table-responsive::-webkit-scrollbar {
                overflow-y: hidden;
                overflow-x: auto;
                height: 7px; /* Adjust the width of the scrollbar as needed */
            }

            .table-responsive::-webkit-scrollbar-thumb {
                background-color: deepskyblue; /* Scrollbar thumb color */
                border-radius: 8px; /* Adjust the radius to make the thumb rounded */
            }

                .table-responsive::-webkit-scrollbar-thumb:hover {
                    background-color: #888; /* Scrollbar thumb color on hover */
                }

            .table-responsive::-webkit-scrollbar-track {
                background-color: white; /* Background color of the scrollbar track */
            }

    </style>
</head>
<div class="container" style="margin-top: 20px;">
    <ul class="nav" style="box-shadow: rgba(17, 12, 46, 0.08) 0px 48px 100px 0px; height: 55px;">
        <li class="nav-item"><a class="nav-link" href="@Url.Action("Admin_Panel")">Home</a></li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle thenav-link" href="#" role="button" aria-haspopup="true" aria-expanded="false">Venues</a>
            <ul class="dropdown-menu" style="background: white; border: none; padding: 13px; box-shadow: rgba(17, 12, 46, 0.2) 0px 48px 100px 0px; border-radius: 8px; height: 120px;">
                <li><a class="dropdown-item" href="@Url.Action("Add_Venue")">Add Venues</a></li>
                <li><a class="dropdown-item" href="@Url.Action("View_Venue")">View Venues</a></li>
            </ul>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle thenav-link" href="#" role="button" aria-haspopup="true" aria-expanded="false">Experts</a>
            <ul class="dropdown-menu" style="background: white; border: none; padding: 13px; box-shadow: rgba(17, 12, 46, 0.2) 0px 48px 100px 0px; border-radius: 8px;">
                <li><a class="dropdown-item" href="@Url.Action("AllExperts")">All Experts</a></li>
                <li><a class="dropdown-item" href="@Url.Action("ExpertRequests")">Expert Requests</a></li>
                <li><a class="dropdown-item" href="@Url.Action("ExpertBookings")">Expert Bookings</a></li>
            </ul>
        </li>
        <li class="nav-item"><a class="nav-link" href="@Url.Action("RegisteredUser","Admin")">Registered Users</a></li>
        <li class="nav-item"><a class="nav-link" href="#">Comments & Reviews</a></li>
        <li class="nav-item"><a class="nav-link" href="@Url.Action("Logout","Admin")">Logout</a></li>
    </ul>
</div>
<script>
    $(document).ready(function () {
        $('.dropdown').hover(
            function () {
                $(this).find('.dropdown-menu').stop(true, true).delay(100).fadeIn(10);
            },
            function () {
                $(this).find('.dropdown-menu').stop(true, true).delay(100).fadeOut(10);
            }
        );
    });
</script>
<div class="center-card" style="border: none;">
    <div class="card container center-table bg-white" style="box-shadow: rgba(17, 12, 46, 0.05) 0px 48px 100px 0px;">
        <div class="container center-heading">
            <h3>Our All Experts Bookings</h3>
        </div>
        <hr style="color:black;" />
        <div class="table-responsive" style="overflow-y: scroll;">
            <div class="table-responsive">
                <div class="table-responsive table-wrapper" style="overflow-y: hidden; overflow-x: auto; max-height: 300px;">
                    <table class="table table-borderless bg-white text-black customtable">
                        <thead>
                            <tr>
                                <td>Booking Id</td>
                                <td>User Id</td>
                                <td>Tour Id</td>
                                <td>Expert Id</td>
                                <td>Numbers of Adults</td>
                                <td>Numbers of Childern</td>
                                <td>Booking Date</td>
                                <td>Credit Card Number</td>
                                <td>PIN</td>
                                <td>CVV</td>
                                <td>Card Holder Name</td>
                                <td>User Contact Number</td>
                                <td>User Email</td>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.BookingId</td>
                                        <td>@item.UserId</td>
                                        <td>@item.DestinationId</td>
                                        <td>@item.ExpertID</td>
                                        <td>@item.NumberOfAdults</td>
                                        <td>@item.NumberOfChildren</td>
                                        <td>@item.BookingDate</td>
                                        <td>@item.CreditCardNumber</td>
                                        <td>@item.PIN</td>
                                        <td>@item.CVV</td>
                                        <td>@item.CardHolderName</td>
                                        <td>@item.ContactNumber</td>
                                        <td>@item.Email</td>

                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    </div>
                </div>
            </div>
    </div>
</div>