@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/Content/css/AdminPanel.css?v=@DateTime.Now.Ticks" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css" integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk=" crossorigin="anonymous" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link rel="stylesheet" href="~/Content/css/AdminPanel.css?v=@DateTime.Now.Ticks" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.js" integrity="sha512-8Z5++K1rB3U+USaLKG6oO8uWWBhdYsM3hmdirnOEWp8h2B1aOikj5zBzlXs8QOrvY9OxEnD2QDkbSKKpfqcIWw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">
    <title>View All Categories - FlavourFusion</title>
    <style>

        a {
            text-decoration:none;
            color:black;
        }

        a:hover {
            text-decoration:none;

        }

        body {
            font-family: 'Poppins', sans-serif;
            overflow-x: hidden;
        }

        h4 {
            font-size: 30px;
            text-align: center;
            margin-top: 60px;
            margin-bottom: 40px;
        }

        .venue-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            margin-top: 20px;
        }

        .venue-card {
            height: 380px;
            width: 330px;
            margin: 20px;
            box-shadow: rgba(17, 12, 46, 0.05) 0px 48px 100px 0px;
            border-color: white;
            transition: 0.2s;
            border-radius: 12px;
            margin-bottom: 30px;
            position: relative;
        }

        .venue-img {
            width: 100%;
            object-fit: cover;
            border-radius: 8px;
        }

        .pagination-container {
            margin-top: 50px;
            margin-bottom: 30px;
            display: flex;
            justify-content: center;
        }

        .pagination {
            display: flex;
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .pagination li {
                box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
                margin-right: 5px;
            }

                .pagination li:last-child {
                    margin-right: 0;
                }

        .pagination-link {
            display: block;
            padding: 10px 15px;
            background-color: white;
            border: none;
            color: black;
            text-decoration: none;
            transition: background-color 0.2s;
        }

            .pagination-link:hover,
            .pagination-link:focus {
                background-color: #3554D1;
                color: white;
                border-color: #F76B6A;
            }

        .thedeletebtn:hover {
            color: orangered;
        }

        /* Popup Styles */
        .popup-container {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, 0.5);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            display: none;
        }

        .popup-content {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            text-align: center;
        }

        .popup-buttons {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

            .popup-buttons button {
                border-radius: 3px;
                width: 50px;
                height: 35px;
                border: none;
                margin: 0 10px;
                transition:0.2s;
            }

                .popup-buttons button:hover {
                    width: 57px;
                    height: 37px;
                    font-size:19px;
                    box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
                }
    </style>
</head>
<body>
    <div class="container" style="margin-top: 20px;">
        <ul class="nav" style="box-shadow: rgba(17, 12, 46, 0.08) 0px 48px 100px 0px; height: 55px;">
            <li class="nav-item"><a class="nav-link" href="@Url.Action("Admin_Panel")">Home</a></li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle thenav-link" href="#" role="button" aria-haspopup="true" aria-expanded="false">Venues</a>
                <ul class="dropdown-menu" style="background: white; border: none; padding: 13px; box-shadow: rgba(17, 12, 46, 0.2) 0px 48px 100px 0px; border-radius: 8px; height: 120px;">
                    <li><a class="dropdown-item" href="@Url.Action("Add_Venue")">Add Venues</a></li>
                    <li><a class="dropdown-item" href="@Url.Action("View_Venue")">View Venues</a></li>
                </ul>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle thenav-link" href="#" role="button" aria-haspopup="true" aria-expanded="false">Experts</a>
                <ul class="dropdown-menu" style="background: white; border: none; padding: 13px; box-shadow: rgba(17, 12, 46, 0.2) 0px 48px 100px 0px; border-radius: 8px; height: 120px;">
                    <li><a class="dropdown-item" href="@Url.Action("ExpertRequests")">Expert Requests</a></li>
                    <li><a class="dropdown-item" href="@Url.Action("ExpertBookings")">Expert Bookings</a></li>
                </ul>
            </li>
            <li class="nav-item"><a class="nav-link" href="@Url.Action("RegisteredUser","Admin")">Registered Users</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Comments & Reviews</a></li>
            <li class="nav-item"><a class="nav-link" href="@Url.Action("Logout","Admin")">Logout</a></li>
        </ul>
    </div>
    <script>
        $(document).ready(function () {
            $('.dropdown').hover(
                function () {
                    $(this).find('.dropdown-menu').stop(true, true).delay(100).fadeIn(10);
                },
                function () {
                    $(this).find('.dropdown-menu').stop(true, true).delay(100).fadeOut(10);
                }
            );
        });
    </script>
    <div class="container">
        <h4 style="font-weight: 500;">View All Venues</h4>
        <div class="venue-container">
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <div class="venue-card" style="margin-bottom: 80px;">
                        <img src="@Url.Content(item.Venue_img)" class="venue-img" alt="Venue Image">
                        <div class="thevenueaction" style="background-color: white; width: 330px; box-shadow: rgba(17, 12, 46, 0.05) 0px 48px 100px 0px; padding: 5px; height: 60px; border-bottom-left-radius: 8px; border-bottom-right-radius: 8px; display: flex; justify-content: center; align-items: center; ">
                            <a href="@Url.Action("Edit_Venue", "Admin", new { id = item.Venue_id })" style="font-size: 19px;">Edit <img src="~/Content/img/edit.png" height="20" width="20" /> </a>
                            <a href="#" class="thedeletebtn" onclick="showPopup('@Url.Action("DeleteConfirmed", "Admin", new { id = item.Venue_id })')" style="font-size: 19px; margin-left: 15px;">Delete <img src="~/Content/img/delete.png" height="20" width="20" /> </a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
    <div class="pagination-container">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                    <a class="pagination-link" href="@Url.Action("View_Venue", new { page = Model.PageNumber - 1 })" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                        <a class="pagination-link" href="@Url.Action("View_Venue", new { page = i })">@i</a>
                    </li>
                }
                <li class="page-item @(Model.PageNumber == Model.PageCount ? "disabled" : "")">
                    <a class="pagination-link" href="@Url.Action("View_Venue", new { page = Model.PageNumber + 1 })" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

    <!-- Popup Container -->
    <div class="popup-container" id="popupContainer">
        <div class="popup-content">
            <p>Are you sure you want to delete this venue?</p>
            <form id="deleteForm" method="post">
                @Html.AntiForgeryToken()
                <div class="popup-buttons">
                    <button class="btn-primary" onclick="cancelDelete()">No</button>
                    <button class="btn-danger" id="deleteBtn" onclick="confirmDelete()">Yes</button>
                </div>
            </form>
        </div>
    </div>


    <script>
        // Show popup function
        function showPopup(deleteUrl) {
            var popupContainer = document.getElementById("popupContainer");
            var deleteBtn = document.getElementById("deleteBtn");

            // Update delete button data attributes with the deleteUrl
            deleteBtn.dataset.deleteUrl = deleteUrl;

            // Show the popup
            popupContainer.style.display = "flex";
        }

        // Confirm delete function
        // Confirm delete function
        function confirmDelete() {
            var deleteBtn = document.getElementById("deleteBtn");
            var deleteUrl = deleteBtn.dataset.deleteUrl;

            // Create a data object with the anti-forgery token
            var data = {
                "__RequestVerificationToken": $("input[name='__RequestVerificationToken']").val()
            };

            // Make an AJAX request to the delete URL
            $.ajax({
                url: deleteUrl,
                type: "POST",
                dataType: "json",
                data: data,
                success: function (data) {
                    if (data.success) {
                        var venueCard = deleteBtn.closest(".venue-card");
                        venueCard.remove();
                    } else {
                        console.error("Delete request failed. Status: " + data.status);
                    }
                },
                error: function (xhr, status, error) {
                    console.error("Delete request failed. Status: " + xhr.status);
                }
            });

            // Hide the popup
            cancelDelete();
        }

        // Cancel delete function
        function cancelDelete() {
            var popupContainer = document.getElementById("popupContainer");

            // Hide the popup
            popupContainer.style.display = "none";
        }

    </script>
</body>
</html>
