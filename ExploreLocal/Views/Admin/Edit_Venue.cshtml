@model ExploreLocal.Models.Tbl_Venue

@{
    ViewBag.Title = "Edit Category";
    Layout = null;
}
<head>
    <link rel="stylesheet" href="~/Content/css/AdminPanel.css?v=@DateTime.Now.Ticks" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.js" integrity="sha512-8Z5++K1rB3U+USaLKG6oO8uWWBhdYsM3hmdirnOEWp8h2B1aOikj5zBzlXs8QOrvY9OxEnD2QDkbSKKpfqcIWw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css" integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk=" crossorigin="anonymous" />
    <title>Edit Recipe Category - FlavourFusion</title>
</head>
<style>
    body {
        font-family: 'Poppins', sans-serif;
    }

    .thecontainer {
        width: 500px;
        padding: 25px;
        box-shadow: rgba(17, 12, 46, 0.08) 0px 48px 100px 0px;
        border-radius: 12px;
    }

    #custom-input {
        width: 60vh;
        border-color: #3385ff;
        height: 50px;
        padding: 20px;
        box-shadow: rgba(17, 12, 46, 0.02) 0px 48px 100px 0px;
        transition: 0.2s;
    }

        #custom-input:focus {
            padding: 15px;
            border-color: cornflowerblue;
        }

    .btn-container {
        display: flex;
        justify-content: flex-end;
        margin-top: 20px;
    }

        .btn-container button {
            margin: 10px;
            padding: 10px 20px;
            margin-left: 5px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            border: none;
        }

        .btn-container .btn-save {
            background-color: #3554D1;
            color: #fff;
        }

        .btn-container .btn-cancel {
            margin: 10px;
            padding: 10px 20px;
            margin-left: 10px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            border: none;
            background-color: #F76B6A;
            color: #fff;
        }
</style>
<div class="container" style="margin-top: 20px;">
    <ul class="nav" style="box-shadow: rgba(17, 12, 46, 0.08) 0px 48px 100px 0px; height: 55px;">
        <li class="nav-item"><a class="nav-link" href="@Url.Action("Admin_Panel")">Home</a></li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle thenav-link" href="#" role="button" aria-haspopup="true" aria-expanded="false">Venues & Announcements</a>
            <ul class="dropdown-menu" style="background: white; border: none; padding: 13px; box-shadow: rgba(17, 12, 46, 0.2) 0px 48px 100px 0px; border-radius: 8px;">
                <li><a class="dropdown-item" href="@Url.Action("Add_Venue")">Add Venues</a></li>
                <li><a class="dropdown-item" href="@Url.Action("View_Venue")">View Venues</a></li>
                <li><a class="dropdown-item" href="@Url.Action("Add_Annoucement")">Add Announcement</a></li>
                <li><a class="dropdown-item" href="@Url.Action("View_Annoucement")">View Announcement</a></li>
            </ul>
        </li>

        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle thenav-link" href="#" role="button" aria-haspopup="true" aria-expanded="false">Experts</a>
            <ul class="dropdown-menu" style="background: white; border: none; padding: 13px; box-shadow: rgba(17, 12, 46, 0.2) 0px 48px 100px 0px; border-radius: 8px;">
                <li><a class="dropdown-item" href="@Url.Action("AllExperts")">All Experts</a></li>
                <li><a class="dropdown-item" href="@Url.Action("ExpertRequests")">Expert Requests</a></li>
                <li><a class="dropdown-item" href="@Url.Action("ExpertBookings")">Expert Bookings</a></li>
                <li><a class="dropdown-item" href="@Url.Action("ExpertTourRequests")">Expert Tour Requests</a></li>

            </ul>
        </li>
        <li class="nav-item"><a class="nav-link" href="@Url.Action("RegisteredUser","Admin")">Registered Users</a></li>
        <li class="nav-item"><a class="nav-link" href="#">Comments & Reviews</a></li>
        <li class="nav-item"><a class="nav-link" href="@Url.Action("Logout","Admin")">Logout</a></li>
    </ul>
</div>
<script>
    $(document).ready(function () {
        $('.dropdown').hover(
            function () {
                $(this).find('.dropdown-menu').stop(true, true).delay(100).fadeIn(10);
            },
            function () {
                $(this).find('.dropdown-menu').stop(true, true).delay(100).fadeOut(10);
            }
        );
    });
</script>
<div class="container" style="display:flex;justify-content:center;align-items:center;height:100vh;">
    @using (Html.BeginForm("Save_Venue", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", id = "signupform" }))
    {
    <div class="thecontainer">
        @Html.HiddenFor(model => model.Venue_id)
        <br />
        <div class="form-group">
            <label>Venue Name: </label>
            <br />
            @Html.TextBoxFor(model => model.Venue_name, new { @class = "form-control", @id = "custom-input" })
        </div>
        <br />
        <div class="form-group">
            <label>Venue Country: </label>
            <br />
            @Html.TextBoxFor(model => model.Venue_Country, new { @class = "form-control", @id = "custom-input" })
        </div>
        <br />
        <div class="form-group">
            <label>Venue Description: </label>
            <br />
            @Html.TextBoxFor(model => model.Venue_Description, new { @class = "form-control", @id = "custom-input" })
        </div>
        <br />
        <div class="form-group">
            <label>Venue Image: </label>
            <br />
            <input type="file" name="imgfile" id="imgfile" style="height: 50px; box-shadow: rgba(17, 12, 46, 0.12) 0px 48px 100px 0px; background-color: white; width: 60vh; border-color: white; padding-top: 10px; padding-bottom: 5px;padding-left:10px;" />
        </div>
        <br />
        <div class="btn-container">
            <button type="submit" class="btn btn-save">Save</button>
            <a href="@Url.Action("View_Venue")" class="btn btn-cancel">Cancel</a>
        </div>
    </div>
    }
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.getElementById('signupform').addEventListener('submit', function(event) {
        event.preventDefault();
        Swal.fire({
            icon: 'success',
            title: 'Congrats!',
            text: 'Your Venue is Updated!'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '@Url.Action("View_Category", "FlavourFusion")';
                this.submit();
            }
        });
    });
</script>
