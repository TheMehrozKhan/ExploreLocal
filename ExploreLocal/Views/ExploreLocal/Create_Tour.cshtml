@model ExploreLocal.Models.Tbl_Destination
@{
    ViewBag.Title = "Create_Ad";
}
<head>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet" />
    <title>Create Your Ad - Shopio The Best Ecommerce Store in The Town</title>
    <style>

        body {
            font-family: 'Poppins', sans-serif;
        }

        form {
            padding-top: 40px;
            padding-bottom: 30px;
            padding-left: 100px;
            padding-right: 100px;
            margin-top: 50px;
            border-radius: 25px;
            margin-top: 50px;
            margin-bottom: 50px;
            box-shadow: rgba(17, 12, 46, 0.08) 0px 48px 100px 0px;
        }

        #thebutton {
            border: none;
            cursor: pointer;
            width: 100%;
            font-size: 23px;
            height: 55px;
        }

            #thebutton:hover {
                box-shadow: rgba(149, 157, 165, 0.1) 0px 8px 24px;
            }

        input {
            border-radius: 4.5px;
            padding: 10px;
            width: 100%;
            box-shadow: rgba(149, 157, 165, 0.1) 0px 8px 24px;
        }

        select.form-control {
            margin-bottom: 30px;
        }

        .theform input:focus,
        .theform textarea:focus,
        .theform select:focus {
            outline: none;
            box-shadow: rgba(149, 157, 165, 0.07) 0px 8px 24px;
            border-color: #3554D1;
        }

        .theform .form-group {
            margin-bottom: 25px;
        }

        textarea {
            box-shadow: rgba(149, 157, 165, 0.1) 0px 8px 24px;
        }
    </style>
</head>
<div class="d-flex justify-content-center align-items-center" style="margin-top:50px;">
    @using (Html.BeginForm("Create_Tour", "ExploreLocal", FormMethod.Post, new { enctype = "multipart/form-data", @class = "theform" }))
    {
        <h3 class="text-center mb-4">Create Your Ad Now! 😃</h3>

        <div class="form-group" style="margin-top: 30px; position: relative; top: 23px; box-shadow: rgba(149, 157, 165, 0.07) 0px 8px 24px; ">
            @Html.LabelFor(x => x.FK_Venue_Id, "Select Venue Category:")
            @Html.DropDownListFor(x => x.FK_Venue_Id, ViewBag.categorylist as SelectList, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.DestinationName, "Destination Name:")
            @Html.TextBoxFor(x => x.DestinationName, new { @class = "form-control", @placeholder = "Enter Destination Name" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Price, "Destination Price:")
            @Html.TextBoxFor(x => x.Price, new { @class = "form-control", @type = "number", @placeholder = "Enter Destination Price" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Country, "Destination Country:")
            @Html.TextBoxFor(x => x.Country, new { @class = "form-control", @placeholder = "Enter Destination Country" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Description, "Destination Country:")
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @placeholder = "Enter Country Description" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.GoogleStreetViewURL, "Google Street View URL:")
            @Html.TextBoxFor(x => x.GoogleStreetViewURL, new { @class = "form-control", @placeholder = "Enter Google Street View URL", @id = "custom-input" })
            <span style="color: red">@Html.ValidationMessageFor(x => x.GoogleStreetViewURL)</span>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.MeetingPoint, "Meeting Point:")
            @Html.TextBoxFor(x => x.MeetingPoint, new { @class = "form-control", @placeholder = "Enter Meeting Point Address", @id = "custom-input" })
            <span style="color: red">@Html.ValidationMessageFor(x => x.MeetingPoint)</span>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Language, "Language:")
            @Html.TextBoxFor(x => x.Language, new { @class = "form-control", @placeholder = "Enter Your Language", @id = "custom-input" })
            <span style="color: red">@Html.ValidationMessageFor(x => x.Language)</span>
        </div>

        <div class="form-group">
            <label for="datepicker">Start Date:</label>
            <input class="form-control datepicker" type="text" id="datepicker" name="StartDate" />
        </div>

        <div class="form-group">
            <label for="datepicker">End Date:</label>
            <input class="form-control datepicker" type="text" id="datepicker" name="EndDate" />
        </div>

        <div class="form-group">
            @Html.Label("Destination Images:")
            <input type="file" name="imgfiles" id="imgfiles" class="form-control-file" required multiple />
        </div>

        <button type="submit" class="btn btn-primary" id="thebutton" style="background-color: #3554D1; outline: none; border: none; margin-top: 10px;color:white;">
            Create Tour
        </button>
    }
</div>
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-QlVXO1++HQhCPtg63LOHm12RrLcRgtvP+/uFEC5G89bKmBCG02FDU1gJb+NKbxZX" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    flatpickr(".datepicker", {
        dateFormat: "Y-m-d",
        enableTime: false,
    });
    document.getElementById('signupform').addEventListener('submit', function(event) {
            event.preventDefault();
            Swal.fire({
                icon: 'success',
                title: 'Congrats!',
                text: 'Your Contest is Created!'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '@Url.Action("CreateContest", "FlavourFusion")';
                    this.submit();
                }
            });
        });
</script>