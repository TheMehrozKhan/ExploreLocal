@model ExploreLocal.Models.Tbl_User
<title> @Session["u_name"] Profile - ExploreLocal</title>
<style>
    .circle-img {
        width: 70px;
        height: 60px;
        border-radius: 50%;
        object-fit: cover;
    }

    .center-card {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    h1 {
        text-align: center;
        margin-top: 40px;
    }

    .profile-card {
        border-radius: 8px;
        padding: 20px;
        margin-top: 40px;
        display: flex;
        flex-direction: row;
        align-items: center;
    }

    .left-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-right: 20px;
    }

    .right-section {
        flex-grow: 1;
    }

    .profile-info {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        margin-left: 30px;
        padding-right: 20px;
        border-right: 1px solid #ddd;
    }

    .profile-picture {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 10px;
    }

    .profile-username {
        font-size: 20px;
        font-weight: bold;
    }

    .profile-details {
        display: flex;
        flex-direction: column;
        margin-top: 20px;
    }

    .profile-details-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 0;
        border-bottom: 1px solid #ddd;
    }

    .profile-details-label {
        font-size: 14px;
    }

    .profile-details-value {
        font-size: 16px;
        font-weight: bold;
    }

    .profile-input {
        width: 100%;
        padding: 5px;
        border: none;
        background-color: transparent;
    }

    .profile-actions {
        margin-top: 20px;
        text-align: right;
    }

    #thecontainer {
        border-radius: 8px;
        background-color: white;
        box-shadow: rgba(17, 12, 46, 0.15) 0px 48px 100px 0px;
        padding: 25px;
    }

    #thefirsta {
        color: black;
    }

        #thefirsta:hover {
            color: #F76B6A;
        }


    .button-5 {
        align-items: center;
        background-clip: padding-box;
        background-color: darkblue;
        border: 1px solid transparent;
        border-radius: .25rem;
        box-shadow: rgba(0, 0, 0, 0.02) 0 1px 3px 0;
        box-sizing: border-box;
        color: #fff;
        cursor: pointer;
        display: inline-flex;
        font-size: 16px;
        font-weight: 500;
        justify-content: center;
        line-height: 1.25;
        margin: 0;
        min-height: 3rem;
        padding: calc(.875rem - 1px) calc(1.5rem - 1px);
        position: relative;
        text-decoration: none;
        transition: all 250ms;
        user-select: none;
        -webkit-user-select: none;
        touch-action: manipulation;
        vertical-align: baseline;
        width: auto;
    }

        .button-5:hover,
        .button-5:focus {
            color: white;
            background-color: darkblue;
            box-shadow: rgba(0, 0, 0, 0.1) 0 4px 12px;
        }

        .button-5:hover {
            color: white;
            transform: translateY(-1px);
        }

        .button-5:active {
            color: white;
            background-color: darkblue;
            box-shadow: rgba(0, 0, 0, .06) 0 2px 4px;
            transform: translateY(0);
        }

    .table-responsive {
        overflow-y: hidden; /* Hide the vertical scrollbar */
        overflow-x: auto; /* Enable horizontal scrollbar */
    }

        .table-responsive table {
            width: 100%;
            white-space: nowrap;
        }

        .table-responsive td,
        .table-responsive th {
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .table-responsive::-webkit-scrollbar {
            overflow-y: hidden;
            overflow-x: auto;
            height: 5px; /* Adjust the width of the scrollbar as needed */
        }

        .table-responsive::-webkit-scrollbar-thumb {
            background-color: deepskyblue; /* Scrollbar thumb color */
            border-radius: 8px; /* Adjust the radius to make the thumb rounded */
        }

            .table-responsive::-webkit-scrollbar-thumb:hover {
                background-color: #888; /* Scrollbar thumb color on hover */
            }

        .table-responsive::-webkit-scrollbar-track {
            background-color: white; /* Background color of the scrollbar track */
        }
</style>
<div class="container" style="background-color: white; box-shadow: rgba(17, 12, 46, 0.05) 0px 48px 100px 0px;border-radius:15px;margin-top:150px;margin-bottom:50px;">
    <div class="profile-card">
        <div class="left-section">
            <div class="profile-info">
                <img class="profile-picture" src="@Url.Content(Model.ProfileImage)" alt="Profile Picture" />
                <div class="profile-username">@Model.FirstName @Model.LastName</div>
            </div>
        </div>
        <div class="right-section">
            <div class="profile-details">
                <div class="profile-details-item">
                    <div class="profile-details-label">Password:</div>
                    <div class="profile-details-value">
                        <input type="password" class="profile-input" value="@Model.Password" readonly style="text-align:right;" />
                    </div>
                </div>
                <div class="profile-details-item">
                    <div class="profile-details-label">Email:</div>
                    <div class="profile-details-value">
                        <input type="email" class="profile-input" value="@Model.Email" readonly style="text-align:right;" />
                    </div>
                </div>
                <div class="profile-details-item">
                    <div class="profile-details-label">Location:</div>
                    <div class="profile-details-value">
                        <input type="email" class="profile-input" value="@Model.Location" readonly style="text-align:right;" />
                    </div>
                </div>
            </div>
            <div class="profile-actions">
                @if (Convert.ToInt32(Session["u_id"]) == Model.UserID)
                {
                    <div style="margin-top:20px;">
                        <a href="@Url.Action("Edit_Profile", "ExploreLocal", new { id = Model.UserID })" class="button-5">Edit</a>
                        <a href="@Url.Action("Logout", "ExploreLocal", new { id = Model.UserID })" class="button-5" style="background-color:darkorange">Logout</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div class="container" style="background-color: white; box-shadow: rgba(17, 12, 46, 0.05) 0px 48px 100px 0px; border-radius: 15px; margin-top: 150px; margin-bottom: 50px;">
    <div class="user-bookings" style="padding: 20px;">
        <h2 style="text-align: center; margin-bottom: 30px;">Booked Tours</h2>
        @if (ViewBag.UserBookings != null && ViewBag.UserBookings.Count > 0)
        {
            <div class="table-responsive">
                <!-- Add table-responsive class for responsive table -->
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Booking ID</th>
                            <th>Destination</th>
                            <th>Booking Date</th>
                            <th>Your Expert</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Tour Duration</th>
                            <th>Tour Price</th>
                            <th>Tour State</th> <!-- New column -->
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in ViewBag.UserBookings)
                        {
                            <tr>
                                <td>@booking.BookingId</td>
                                <td>@(booking.Tbl_Destination != null ? booking.Tbl_Destination.DestinationName : "N/A")</td>
                                <td>@booking.BookingDate.ToString("yyyy-MM-dd")</td>
                                <td>@(booking.Tbl_Expert != null ? booking.Tbl_Expert.ExpertName : "N/A")</td>
                                <td>@(booking.Tbl_Expert != null ? booking.Tbl_Destination.StartDate : "N/A")</td>
                                <td>@(booking.Tbl_Expert != null ? booking.Tbl_Destination.EndDate : "N/A")</td>
                                <td>@(booking.Tbl_Destination != null ? booking.Tbl_Destination.Destination_Duration : "N/A")</td>
                                <td>@(booking.Tbl_Destination != null ? booking.Tbl_Destination.Price : "N/A")</td>
                                <td style="">
                                    <p style="background-color: @GetTourStateColor(booking.TourState);color:white;border-radius:12px;height:35px;width:120px;display:flex;justify-content:center;align-items:center;box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;"> @booking.TourState </p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div style="display:flex;justify-content:center;align-items:center;">
                <div class="p-container" style="box-shadow: rgba(17, 12, 46, 0.1) 0px 48px 100px 0px; background: #3554D1; border-radius: 12px; padding: 21px; ">
                    <p style="font-size:26px;font-weight:600;line-height:30px;color:#000000;color:white;">Sorry @Session["u_name"] You Didn't <br /> Booked Any Tours Yet!</p>
                </div>
                    <img src="~/Content/img/Couldn'tFind.png" style="position:relative;top:20px;"/>
            </div>
        }

        @functions {
            // Helper function to get background color based on tour state
            private string GetTourStateColor(string tourState)
            {
                if (tourState == "Upcoming")
                {
                    return "darkorange"; // Yellow background for "Upcoming"
                }
                else if (tourState == "Ongoing")
                {
                    return "#a402f5"; // Deep sky blue background for "Ongoing"
                }
                else if (tourState == "Completed")
                {
                    return "#0298f5"; // Light green background for "Completed"
                }
                else
                {
                    return "white"; // Default background color (white) for unknown states
                }
            }
        }

    </div>
</div>
