﻿@model ExploreLocal.Models.Tbl_Destination
@{
    ViewBag.Title = "Create_Ad";
    Layout = null;
}
<head>
    <title>Our Admin Panel Home - FlavourFusion</title>
    <link rel="stylesheet" href="~/Content/css/AdminPanel.css?v=@DateTime.Now.Ticks" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.js" integrity="sha512-8Z5++K1rB3U+USaLKG6oO8uWWBhdYsM3hmdirnOEWp8h2B1aOikj5zBzlXs8QOrvY9OxEnD2QDkbSKKpfqcIWw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">
    <link href="~/Content/bootstrap-select-country.min.css" rel="stylesheet">
    <script src="~/Scripts/bootstrap-select-country.min.js"></script>
    <style>
        * {
            font-family: 'Poppins', sans-serif;
        }

        .form-group {
            margin-bottom: 40px;
        }

        #custom-input {
            border-color: #3385ff;
            height: 50px;
            padding: 20px;
            box-shadow: rgba(17, 12, 46, 0.02) 0px 48px 100px 0px;
            transition: 0.2s;
        }

            #custom-input:focus {
                padding: 15px;
                border-color: cornflowerblue;
            }

        #the-custom-input {
            border-color: #3385ff;
            box-shadow: rgba(17, 12, 46, 0.02) 0px 48px 100px 0px;
            transition: 0.2s;
        }

            #the-custom-input:focus {
                padding: 10px;
                border-color: cornflowerblue;
            }

        .theinput:focus {
            border-color: #3385ff;
        }
    </style>
</head>
<div class="container" style="margin-top: 20px;">
    <ul class="nav" style="box-shadow: rgba(17, 12, 46, 0.08) 0px 48px 100px 0px; height: 55px;">
        <li class="nav-item"><a class="nav-link" href="@Url.Action("Admin_Panel")">Home</a></li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle thenav-link" href="#" role="button" aria-haspopup="true" aria-expanded="false">Venues</a>
            <ul class="dropdown-menu" style="background: white; border: none; padding: 13px; box-shadow: rgba(17, 12, 46, 0.2) 0px 48px 100px 0px; border-radius: 8px; height: 120px;">
                <li><a class="dropdown-item" href="@Url.Action("Add_Venue")">Add Venues</a></li>
                <li><a class="dropdown-item" href="@Url.Action("View_Venue")">View Venues</a></li>
            </ul>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle thenav-link" href="#" role="button" aria-haspopup="true" aria-expanded="false">Experts</a>
            <ul class="dropdown-menu" style="background: white; border: none; padding: 13px; box-shadow: rgba(17, 12, 46, 0.2) 0px 48px 100px 0px; border-radius: 8px;">
                <li><a class="dropdown-item" href="@Url.Action("AllExperts")">All Experts</a></li>
                <li><a class="dropdown-item" href="@Url.Action("ExpertRequests")">Expert Requests</a></li>
                <li><a class="dropdown-item" href="@Url.Action("ExpertBookings")">Expert Bookings</a></li>
                <li><a class="dropdown-item" href="@Url.Action("ExpertTourRequests")">Expert Tour Requests</a></li>

            </ul>
        </li>
        <li class="nav-item"><a class="nav-link" href="@Url.Action("RegisteredUser","Admin")">Registered Users</a></li>
        <li class="nav-item"><a class="nav-link" href="#">Comments & Reviews</a></li>
        <li class="nav-item"><a class="nav-link" href="@Url.Action("Logout","Admin")">Logout</a></li>
    </ul>
</div>
<script>
    $(document).ready(function () {
        $('.dropdown').hover(
            function () {
                $(this).find('.dropdown-menu').stop(true, true).delay(100).fadeIn(10);
            },
            function () {
                $(this).find('.dropdown-menu').stop(true, true).delay(100).fadeOut(10);
            }
        );
    });
</script>
<div class="d-flex justify-content-center align-items-center">
    <div class="container" style="box-shadow: rgba(17, 12, 46, 0.1) 0px 48px 100px 0px; border-radius: 20px;padding:70px;width:650px;height:990px;margin-bottom:28px;margin-top:40px;">
        @using (Html.BeginForm("Create_Destination", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @class = "theform" }))
        {
            <form method="post">
                <h3 class="text-center">Add Your Destination! 😃</h3>

                <div class="form-group" style="margin-top: 30px; position: relative; top: 23px; box-shadow: rgba(149, 157, 165, 0.07) 0px 8px 24px;margin-bottom:60px;">
                    @Html.LabelFor(x => x.FK_Venue_Id, "Select Venue Category:")
                    @Html.DropDownListFor(x => x.FK_Venue_Id, ViewBag.categorylist as SelectList, new { @class = "form-control theinput", @style = "border-color:white;height:50px;box-shadow: rgba(17, 12, 46, 0.05) 0px 48px 100px 0px;" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.DestinationName, "Destination Name:")
                    @Html.TextBoxFor(x => x.DestinationName, new { @class = "form-control", @placeholder = "Enter Destination Name", @id = "custom-input" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.Price, "Destination Price:")
                    @Html.TextBoxFor(x => x.Price, new { @class = "form-control", @type = "number", @placeholder = "Enter Destination Price", @id = "custom-input" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.Country, "Destination Country:")
                    @Html.TextAreaFor(x => x.Country, new { @class = "form-control", @placeholder = "Enter Destination Country", @id = "the-custom-input" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.GoogleStreetViewURL, "Google Street View URL:")
                    @Html.TextBoxFor(x => x.GoogleStreetViewURL, new { @class = "form-control", @placeholder = "Enter Google Street View URL", @id = "custom-input" })
                    <span style="color: red">@Html.ValidationMessageFor(x => x.GoogleStreetViewURL)</span>
                </div>

                @*<div class="form-group">
                        @Html.LabelFor(x => x.City, "Destination City:")
                        @Html.TextBoxFor(x => x.City, new { @class = "form-control", @type = "text", @placeholder = "Enter Destination City" })
                    </div>*@

                <div class="form-group">
                    @Html.Label("Destination Images:")
                    <input type="file" name="imgfiles" id="imgfiles" class="form-control-file" style="height: 50px; box-shadow: rgba(17, 12, 46, 0.12) 0px 48px 100px 0px; background-color: white; width: 100%; border-color: white; padding-top: 10px; padding-bottom: 5px;padding-left:10px;" required multiple />
                </div>

                <button type="submit" class="btn btn-primary w-100" id="thebutton" style="font-size:22px;margin-top:10px;height:50px;">Add Destination</button>
            </form>
        }
    </div>
</div>