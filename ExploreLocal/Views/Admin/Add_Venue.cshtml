@{
    ViewBag.Title = "Add_Category";
    Layout = null;
    @model ExploreLocal.Models.Tbl_Venue
}
<head>
    <title>Our Admin Panel Home - FlavourFusion</title>
    <link rel="stylesheet" href="~/Content/css/AdminPanel.css?v=@DateTime.Now.Ticks" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
</head>
<body>
    @Html.Partial("Layout")
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full" data-sidebar-position="fixed" data-header-position="fixed">
        <div class="body-wrapper">
            <div class="container-fluid">
                <div class="card">
                    <div class="card-body">
                        <h5>Add New Venues in ExploreLocal</h5>
                        <p class="card-subtitle mb-3">
                            Add The Relevant Details About Venue in the Given Form
                        </p>
                        <br />
                        @using (Html.BeginForm("Add_Annoucement", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", id = "signupform" }))
                        {
                    <form>
                        <div class="form-floating mb-3">
                            @Html.TextBoxFor(x => x.Venue_name, new { @class = "form-control", @id = "custom-input", @placeholder = "Enter Venue Name" })
                            <label><i class="ti ti-user me-2 fs-4 text-primary"></i><span class="border-start border-primary ps-3">Venue Name</span></label>
                        </div>
                        <div class="form-floating mb-3">
                            @Html.TextBoxFor(x => x.Venue_Country, new { @class = "form-control", @id = "custom-input", @placeholder = "Enter Venue Country" })
                            <label><i class="ti ti-mail me-2 fs-4 text-primary"></i><span class="border-start border-primary ps-3">Venue Country</span></label>
                        </div>
                        <div class="form-floating mb-3">
                            @Html.TextAreaFor(x => x.Venue_Description, new { @class = "form-control", @id = "custom-input", @placeholder = "Enter Venue Country" })
                            <label><i class="ti ti-mail me-2 fs-4 text-primary"></i><span class="border-start border-primary ps-3">Venue Description</span></label>
                        </div>
                        <label for="formFile" class="form-label">Venue Image</label>
                        <input class="form-control" type="file" name="imgfile" id="imgfile" required />
                        <br />
                        <div class="d-md-flex align-items-center">
                            <div class="mt-3 mt-md-0 ms-auto">
                                <button type="submit" class="btn btn-primary font-medium rounded-pill px-4">
                                    <div class="d-flex align-items-center">
                                        <i class="ti ti-plus me-2 fs-4"></i>
                                        Add
                                    </div>
                                </button>
                            </div>
                        </div>
                    </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js"></script>
</body>